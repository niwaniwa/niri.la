---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import BlogCard from "../../../components/BlogCard.astro";
import type { GetStaticPathsOptions } from "astro";
import { getCollection } from "astro:content";
import { BLOG_PAGE_SIZE } from "../../../config";

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const posts = (await getCollection("works", ({ data }) => !data.draft)).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
  );

  return paginate(posts, { pageSize: BLOG_PAGE_SIZE });
}
// All paginated data is passed on the "page" prop

const { page } = Astro.props;
---

<BaseLayout title={`Works - Page ${page.currentPage} | niri.la`}>
  <main class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-8">Blog</h1>

    <ul class="space-y-6">
      {
        page.data.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            href={`/works/${post.id.replace(/\.md$/, "")}`}
            tags={post.data.tags}
            emoji={post.data.emoji}
            image={post.data.image}
          />
        ))
      }
    </ul>

    <nav class="flex justify-center gap-4 mt-8">
      {
        page.url.prev && (
          <a href={page.url.prev} class="text-primary">
            ← prev
          </a>
        )
      }
      <span>{page.currentPage} / {page.lastPage}</span>
      {
        page.url.next && (
          <a href={page.url.next} class="text-primary">
            next →
          </a>
        )
      }
    </nav>
  </main>
</BaseLayout>
