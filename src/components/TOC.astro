---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

const tocHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{
  tocHeadings.length > 0 && (
    <nav class="toc">
      <h2 class="text-sm font-bold mb-3 text-base-content/70">目次</h2>
      <ul class="space-y-2 text-sm">
        {tocHeadings.map((heading) => (
          <li class={heading.depth === 3 ? "ml-4" : ""}>
            <a
              href={`#${heading.slug}`}
              class="text-base-content/60 hover:text-primary"
            >
              {heading.text}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
