---
import { SITE, MVV } from "../config";
import ThemeToggle from "./ThemeToggle.astro";

interface Props {
  domain?: string;
}
---

<aside class="w-full lg:w-80 shrink-0">
  <div class="sticky top-8 space-y-6">
    <div class="text-center"></div>
    <p
      class="font font-bold text-5xl bg-linear-to-r from-rose-400 to-pink-500 bg-clip-text text-transparent"
    >
      {SITE.domain}
    </p>

    <div class="space-y-4">
      <div>
        <h2 class="font-semibold text-sm text-base-content/50">Mission</h2>
        <p class="text-sm">{MVV.mission}</p>
      </div>
      <div>
        <h2 class="font-semibold text-sm text-base-content/50">Vision</h2>
        <p class="text-sm">{MVV.vision}</p>
      </div>
      <div>
        <h2 class="font-semibold text-sm text-base-content/50">Values</h2>
        <ul class="text-sm space-y-1">
          {MVV.values.map((v) => <li>â€¢ {v}</li>)}
        </ul>
      </div>
    </div>
    <div class="mt-4">
      <ThemeToggle />
    </div>
  </div>
</aside>
