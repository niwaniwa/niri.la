---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  href: string;
  tags?: string[];
  emoji?: string;
  image?: string;
}

const { title, description, pubDate, href, tags, emoji, image } = Astro.props;
---

<article class="flex gap-4 p-4 rounded-lg hover:bg-base-200">
  {
    (image || emoji) && (
      <div class="shrink-0 w-16 h-16 flex items-center justify-center rounded-lg bg-base-200 overflow-hidden">
        {image ? (
          <img src={image} alt="" class="w-full h-full object-cover" />
        ) : (
          <span class="text-3xl">{emoji}</span>
        )}
      </div>
    )
  }

  <div class="flex-1 items-center gap-4 mt-2">
    <a href={href}>
      <h2 class="text-xl font-semibold text-primary">{title}</h2>
      <p class="text-base-content/70 mt-1">{description}</p>
    </a>

    <div class="flex items-center gap-4 mt-2">
      <time class="text-sm text-base-content/50">
        {pubDate.toLocaleDateString("ja-JP")}
      </time>

      {
        tags && tags.length > 0 && (
          <ul class="flex gap-2">
            {tags.map((tag) => (
              <li>
                <a
                  href={`/tags/${tag}`}
                  class="text-xs px-2 py-1 bg-base-200 rounded hover:bg-primary hover:text-primary-content"
                >
                  {tag}
                </a>
              </li>
            ))}
          </ul>
        )
      }
    </div>
  </div>
</article>
